{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "CI"
  ],
  "tasks": {
    "check:publish": {
      "dependsOn": [
        "build",
        "generate"
      ]
    },
    "check:tsc": {
      "dependsOn": [
        "^build",
        "codegen"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "codegen"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "generate": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "codegen": {},
    "preview": {
      "dependsOn": [
        "build",
        "generate"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^build",
        "codegen"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "COVERAGE"
      ]
    },
    "dev": {
      "dependsOn": [
        "codegen"
      ],
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "^build",
        "build"
      ]
    },
    "//#lint:root": {
      "inputs": [
        "./*",
        ".vscode/**",
        ".husky/**",
        ".github/**",
        ".changeset/**"
      ]
    }
  }
}
