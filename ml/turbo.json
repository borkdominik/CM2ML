{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "encode:bop": {
      "inputs": [
        "scripts/encode-bop.sh"
      ],
      "outputs": [
        ".output/bag-of-paths.json"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "encode:graph": {
      "inputs": [
        "scripts/encode-graph.sh"
      ],
      "outputs": [
        ".input/graph_train.json",
        ".input/graph_validation.json",
        ".input/graph_test.json"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "encode:pattern": {
      "inputs": [
        "scripts/encode-pattern.sh"
      ],
      "outputs": [
        ".output/patterns.json"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "encode:tree": {
      "inputs": [
        "scripts/encode-tree.sh"
      ],
      "outputs": [
        ".input/tree_train.json",
        ".input/tree_validation.json",
        ".input/tree_test.json"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "train:gnn": {
      "inputs": [
        "scripts/train-gnn.sh",
        ".input/graph_train.json",
        ".input/graph_validation.json",
        ".input/graph_test.json",
        "gnn/src/**",
        "!**/__pycache__"
      ],
      "env": [
        "NAME"
      ],
      "dependsOn": [
        "encode:graph"
      ]
    },
    "train:tree-lstm": {
      "inputs": [
        "scripts/train-tree-lstm.sh",
        ".input/tree_train.json",
        ".input/tree_validation.json",
        ".input/tree_test.json",
        "tree-lstm/src/**",
        "!**/__pycache__"
      ],
      "env": [
        "NAME"
      ],
      "dependsOn": [
        "encode:tree"
      ]
    }
  }
}
